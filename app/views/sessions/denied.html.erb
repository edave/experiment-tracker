
	<div id="content" >
		<h1>Access Denied</h1>

			<% unless self.current_user.nil? or self.current_user == :false %>
			<p>You don't have access to that page.</p>
			<p>You are signed in as user "<b><%= self.current_user.login %></b>".</p>
			<% else %>
			<h2>Please sign in to access that page.</h2>
	
		    <%= render :partial => "login_box" %>
			<% end %>
	
			<br style="clear:both;" />
	
	</div>
</div>    
