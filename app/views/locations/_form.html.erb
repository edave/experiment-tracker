<%= form_for(location) do |f| %>
  <%= f.error_messages %>
  <h3>Building & Room</h3>
	<%= f.text_field :building, :size => 2 %>-<%= f.text_field :room, :size => 4 %>
  <h3>Directions</h3>
  <small>If necessary, include directions for your subjects to find the experiment</small><br />
   <%= f.text_area :directions %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
